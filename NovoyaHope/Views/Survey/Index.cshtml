@model IEnumerable<NovoyaHope.Models.Survey>

@{
    ViewData["Title"] = "Мои Опросы";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h2 style="font-weight: 400; color: #202124;">Мои формы</h2>

        <div class="search-box" style="background: #f1f3f4; padding: 10px 15px; border-radius: 8px; width: 300px;">
            <input type="text" placeholder="Поиск..." style="border: none; background: transparent; outline: none; width: 100%;">
        </div>
    </div>

    <div class="cards-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 20px;">

        <a asp-action="Edit" class="card-create" style="display: block; text-decoration: none; color: inherit;">
            <div style="background: white; border: 2px dashed #c8e6c9; border-radius: 12px; height: 250px; display: flex; flex-direction: column; transition: all 0.3s;">
                <div style="flex-grow: 1; display: flex; justify-content: center; align-items: center; background: #f5faf5; border-bottom: 2px dashed #c8e6c9;">
                    <span style="font-size: 3rem; color: #4caf50;">+</span>
                </div>
                <div style="padding: 15px;">
                    <span style="font-weight: 600; color: #2e7d32;">Создать форму</span>
                </div>
            </div>
        </a>

        @foreach (var survey in Model)
        {
            <div class="survey-card" style="background: white; border: 2px solid #e0e0e0; border-radius: 12px; height: 250px; display: flex; flex-direction: column; overflow: hidden; position: relative; transition: all 0.3s;">

                <a asp-action="Edit" asp-route-id="@survey.Id" style="text-decoration: none; color: inherit; flex-grow: 1;">
                    <div style="height: 150px; background: linear-gradient(135deg, #c8e6c9 0%, #f1f8f4 100%); display: flex; justify-content: center; align-items: center;">
                        <span style="font-size: 3rem; opacity: 0.3;">📝</span>
                    </div>

                    <div style="padding: 15px;">
                        <h5 style="margin: 0; font-size: 1rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: #1a1a1a;">
                            @(string.IsNullOrEmpty(survey.Title) ? "Новая форма" : survey.Title)
                        </h5>
                        <small style="color: #5f6368; display: block; margin-top: 5px;">
                            @if (survey.IsPublished)
                            {
                                <span style="color: #2e7d32; font-weight: 600;">● Опубликовано</span>
                            }
                            else
                            {
                                <span>Черновик</span>
                            }
                        </small>
                        <div style="margin-top: 5px; font-size: 0.8rem; color: #5f6368;">
                            Изменено: @survey.CreatedDate.ToString("dd MMM")
                        </div>
                    </div>
                </a>

                <div style="position: absolute; bottom: 15px; right: 15px; display: flex; gap: 10px;">
                    <a asp-action="Edit" asp-route-id="@survey.Id" title="Редактировать" style="padding: 5px 10px; background: #f1f8f4; border-radius: 6px; transition: all 0.2s;">✏️</a>
                    @if (survey.IsPublished)
                    {
                        <a asp-controller="Survey" asp-action="Results" asp-route-id="@survey.Id" title="Смотреть ответы" style="padding: 5px 10px; background: #f1f8f4; border-radius: 6px; transition: all 0.2s;">📊</a>
                        <a asp-controller="Public" asp-action="ViewSurvey" asp-route-id="@survey.Id" target="_blank" title="Открыть опрос" style="padding: 5px 10px; background: #c8e6c9; border-radius: 6px; transition: all 0.2s;">🔗</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Ховер эффект для карточек */
    .card-create:hover > div {
        box-shadow: 0 4px 12px rgba(46, 125, 50, 0.15);
        border-color: #4caf50 !important;
        transform: translateY(-2px);
    }
    
    .survey-card:hover {
        box-shadow: 0 4px 12px rgba(46, 125, 50, 0.15);
        border-color: #4caf50 !important;
        transform: translateY(-2px);
    }
    
    .survey-card a:hover {
        background-color: #f5faf5;
    }
</style>