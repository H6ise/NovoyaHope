@model NovoyaHope.Models.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход в систему";
    Layout = "_Layout"; // Используем общий макет
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="text-center mb-4">Вход в NovoyaHope</h2>
        <hr />

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors text-center mb-3"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <div class="form-group form-check mt-3 mb-4">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
            </div>

            <button type="submit" class="btn-primary w-100 mb-3">Войти</button>
        </form>

        <div class="text-center mt-3">
            <p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Нет аккаунта? Зарегистрироваться</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}