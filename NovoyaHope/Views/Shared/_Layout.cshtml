<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poles Forms</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
    @RenderSection("ConstructorStyles", required: false)
</head>
<body>
    <!-- Modern Navigation -->
    <nav class="navbar">
        <div class="navbar-container">
            <!-- Logo -->
            <div class="navbar-brand">
                <a asp-controller="Home" asp-action="Index" class="brand-link">
                    <i class="fas fa-poll-h brand-icon"></i>
                    <span class="brand-text">Poles Forms</span>
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Открыть меню">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <!-- Navigation Links -->
            <div class="navbar-menu" id="navbarMenu">
                <ul class="nav-links">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var userManager = Context.RequestServices.GetService(typeof(Microsoft.AspNetCore.Identity.UserManager<NovoyaHope.Models.ApplicationUser>)) as Microsoft.AspNetCore.Identity.UserManager<NovoyaHope.Models.ApplicationUser>;
                        var currentUser = await userManager.GetUserAsync(User);
                        var displayName = !string.IsNullOrEmpty(currentUser?.FirstName) || !string.IsNullOrEmpty(currentUser?.LastName) 
                            ? $"{currentUser.FirstName} {currentUser.LastName}".Trim() 
                            : User.Identity.Name;
                        
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="fas fa-home"></i>
                                <span>Главная</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Survey" asp-action="Index" class="nav-link">
                                <i class="fas fa-clipboard-list"></i>
                                <span>Мои опросы</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Survey" asp-action="Templates" class="nav-link">
                                <i class="fas fa-layer-group"></i>
                                <span>Шаблоны</span>
                            </a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Admin" asp-action="Index" class="nav-link admin-link">
                                    <i class="fas fa-shield-alt"></i>
                                    <span>Админ-панель</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link user-profile-link dropdown-toggle" id="userDropdown">
                                <div class="user-avatar-small">
                                    @if (!string.IsNullOrEmpty(currentUser?.ProfileImagePath))
                                    {
                                        <img src="@currentUser.ProfileImagePath" alt="Avatar" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-user"></i>
                                    }
                                </div>
                                <span class="user-name">@displayName</span>
                                <i class="fas fa-chevron-down dropdown-arrow"></i>
                            </a>
                            <div class="dropdown-menu user-dropdown-menu" id="userDropdownMenu">
                                <div class="dropdown-header">
                                    <div class="user-avatar-large">
                                        @if (!string.IsNullOrEmpty(currentUser?.ProfileImagePath))
                                        {
                                            <img src="@currentUser.ProfileImagePath" alt="Avatar" />
                                        }
                                        else
                                        {
                                            <i class="fas fa-user"></i>
                                        }
                                    </div>
                                    <div class="user-info">
                                        <div class="user-display-name">@displayName</div>
                                        <div class="user-email clickable-email" onclick="openUserInfoModal(event)" title="Нажмите для просмотра информации">
                                            @User.Identity.Name
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Account" asp-action="Profile" class="dropdown-item">
                                    <i class="fas fa-user"></i>
                                    Мой профиль
                                </a>
                                <a asp-controller="Survey" asp-action="Index" class="dropdown-item">
                                    <i class="fas fa-clipboard-list"></i>
                                    Мои опросы
                                </a>
                                <a asp-controller="Account" asp-action="Settings" class="dropdown-item">
                                    <i class="fas fa-cog"></i>
                                    Настройки
                                </a>
                                @if (User.IsInRole("Administrator"))
                                {
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="Admin" asp-action="Index" class="dropdown-item admin-dropdown-item">
                                        <i class="fas fa-shield-alt"></i>
                                        Админ-панель
                                    </a>
                                }
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item logout-btn">
                                        <i class="fas fa-sign-out-alt"></i>
                                        Выход
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="fas fa-home"></i>
                                <span>Главная</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">
                                <i class="fas fa-sign-in-alt"></i>
                                <span>Вход</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="btn-primary-nav">
                                Регистрация
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- User Info Modal -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        var userManager = Context.RequestServices.GetService(typeof(Microsoft.AspNetCore.Identity.UserManager<NovoyaHope.Models.ApplicationUser>)) as Microsoft.AspNetCore.Identity.UserManager<NovoyaHope.Models.ApplicationUser>;
        var currentUser = await userManager.GetUserAsync(User);
        
        <div id="userInfoModal" class="user-info-modal">
            <div class="user-info-modal-content">
                <div class="user-info-modal-header">
                    <h3>Информация о пользователе</h3>
                    <button type="button" class="close-user-info-modal" onclick="closeUserInfoModal()" aria-label="Закрыть окно" title="Закрыть">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="user-info-modal-body">
                    <div class="user-info-avatar-section">
                        @if (!string.IsNullOrEmpty(currentUser?.ProfileImagePath))
                        {
                            <img src="@currentUser.ProfileImagePath" alt="Avatar" class="modal-user-avatar" />
                        }
                        else
                        {
                            <div class="modal-user-avatar-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                    </div>
                    
                    <div class="user-info-details">
                        <div class="user-info-item">
                            <label><i class="fas fa-user"></i> Имя:</label>
                            <span>@(string.IsNullOrEmpty(currentUser?.FirstName) ? "Не указано" : currentUser.FirstName)</span>
                        </div>
                        
                        <div class="user-info-item">
                            <label><i class="fas fa-user"></i> Фамилия:</label>
                            <span>@(string.IsNullOrEmpty(currentUser?.LastName) ? "Не указано" : currentUser.LastName)</span>
                        </div>
                        
                        <div class="user-info-item">
                            <label><i class="fas fa-envelope"></i> Email:</label>
                            <span class="copyable-text" onclick="copyToClipboard('@User.Identity.Name', this)" title="Нажмите для копирования">
                                @User.Identity.Name
                                <i class="fas fa-copy copy-icon"></i>
                            </span>
                        </div>
                        
                        <div class="user-info-item">
                            <label><i class="fas fa-phone"></i> Телефон:</label>
                            @if (!string.IsNullOrEmpty(currentUser?.PhoneNumber))
                            {
                                @if (currentUser.ShowPhoneToPublic)
                                {
                                    <span class="copyable-text" onclick="copyToClipboard('@currentUser.PhoneNumber', this)" title="Нажмите для копирования">
                                        @currentUser.PhoneNumber
                                        <i class="fas fa-copy copy-icon"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="private-info">
                                        <i class="fas fa-lock"></i> Скрыт (виден только вам)
                                    </span>
                                }
                            }
                            else
                            {
                                <span>Не указан</span>
                            }
                        </div>
                        
                        <div class="user-info-item">
                            <label><i class="fas fa-id-badge"></i> ID пользователя:</label>
                            <span class="user-id">@currentUser?.Id</span>
                        </div>
                    </div>
                </div>
                
                <div class="user-info-modal-footer">
                    <a asp-controller="Account" asp-action="Profile" class="btn-modal-primary">
                        <i class="fas fa-edit"></i> Редактировать профиль
                    </a>
                    <button type="button" class="btn-modal-secondary" onclick="closeUserInfoModal()">
                        Закрыть
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Modern Footer -->
    <footer class="modern-footer">
        <div class="footer-container">
            <div class="footer-grid">
                <!-- About Section -->
                <div class="footer-section">
                    <h3 class="footer-title">Poles Forms</h3>
                    <p class="footer-text">Современная платформа для создания опросов и анкет с мощными инструментами анализа.</p>
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="footer-section">
                    <h4 class="footer-subtitle">Быстрые ссылки</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                        <li><a asp-controller="Home" asp-action="About">О нас</a></li>
                        <li><a asp-controller="Home" asp-action="Features">Возможности</a></li>
                        <li><a asp-controller="Home" asp-action="Pricing">Тарифы</a></li>
                    </ul>
                </div>

                <!-- Resources -->
                <div class="footer-section">
                    <h4 class="footer-subtitle">Ресурсы</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Help">Помощь</a></li>
                        <li><a asp-controller="Home" asp-action="Documentation">Документация</a></li>
                        <li><a asp-controller="Home" asp-action="Blog">Блог</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
                    </ul>
                </div>

                <!-- Legal -->
                <div class="footer-section">
                    <h4 class="footer-subtitle">Правовая информация</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a></li>
                        <li><a asp-controller="Home" asp-action="Terms">Условия использования</a></li>
                        <li><a asp-controller="Home" asp-action="Cookies">Cookie</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2025 Poles Forms. Все права защищены.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>

    @RenderSection("ConstructorScripts", required: false)
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Modal and Utility Scripts -->
    <script>
        // User Info Modal functions
        function openUserInfoModal(event) {
            console.log('openUserInfoModal called');
            
            if (event) {
                event.preventDefault();
                event.stopPropagation();
            }
            
            const modal = document.getElementById('userInfoModal');
            console.log('Modal element:', modal);
            console.log('Modal computed display:', modal ? window.getComputedStyle(modal).display : 'N/A');
            
            if (modal) {
                console.log('Adding show class to modal');
                modal.classList.add('show');
                console.log('Modal classes after add:', modal.className);
                console.log('Modal display after add:', window.getComputedStyle(modal).display);
                document.body.style.overflow = 'hidden';
                
                // Close dropdown menu
                const dropdownMenu = document.getElementById('userDropdownMenu');
                if (dropdownMenu) {
                    dropdownMenu.classList.remove('show');
                }
            } else {
                console.error('Modal element not found! User authenticated?');
                alert('Ошибка: Модальное окно не найдено. Убедитесь, что вы авторизованы.');
            }
        }

        function closeUserInfoModal() {
            const modal = document.getElementById('userInfoModal');
            if (modal) {
                modal.classList.remove('show');
                document.body.style.overflow = '';
            }
        }

        // Close modal when clicking outside
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('userInfoModal');
            console.log('DOM Loaded. Modal exists:', modal !== null);
            
            if (modal) {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeUserInfoModal();
                    }
                });
            }
        });

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeUserInfoModal();
            }
        });

        // Copy to clipboard function
        function copyToClipboard(text, element) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success feedback
                const originalHTML = element.innerHTML;
                element.innerHTML = text + ' <i class="fas fa-check" style="color: #4caf50;"></i>';
                element.style.color = '#4caf50';
                
                setTimeout(function() {
                    element.innerHTML = originalHTML;
                    element.style.color = '';
                }, 2000);
            }).catch(function(err) {
                console.error('Ошибка копирования: ', err);
                alert('Не удалось скопировать в буфер обмена');
            });
        }
    </script>
</body>
</html>