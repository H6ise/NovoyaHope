<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NovoyaHope</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("ConstructorStyles", required: false)
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">NovoyaHope</a>
                </div>

                <nav>
                    <ul class="nav-links">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a asp-controller="Survey" asp-action="Index">Мои опросы</a>
                            </li>
                        }

                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - NovoyaHope
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("ConstructorScripts", required: false)

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>