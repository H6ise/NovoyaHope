@model NovoyaHope.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Админ-панель";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-shield-alt"></i> Админ-панель</h1>
        <p class="admin-subtitle">Управление системой NovoyaHope Forms</p>
    </div>

    <!-- Статистика -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon users">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.TotalUsers</h3>
                <p>Всего пользователей</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon surveys">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.TotalSurveys</h3>
                <p>Всего опросов</p>
                <span class="stat-sub">@Model.PublishedSurveys опубликовано</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon templates">
                <i class="fas fa-layer-group"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.TotalTemplates</h3>
                <p>Шаблонов</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon responses">
                <i class="fas fa-reply"></i>
            </div>
            <div class="stat-content">
                <h3>@Model.TotalResponses</h3>
                <p>Ответов</p>
            </div>
        </div>
    </div>

    <!-- Быстрые действия -->
    <div class="quick-actions">
        <h2><i class="fas fa-bolt"></i> Быстрые действия</h2>
        <div class="actions-grid">
            <a asp-action="UserManagement" class="action-card">
                <i class="fas fa-users-cog"></i>
                <span>Управление пользователями</span>
            </a>
            <a asp-action="Surveys" class="action-card">
                <i class="fas fa-clipboard-list"></i>
                <span>Управление опросами</span>
            </a>
            <a asp-action="TemplateManager" class="action-card">
                <i class="fas fa-layer-group"></i>
                <span>Управление шаблонами</span>
            </a>
        </div>
    </div>

    <!-- Недавние опросы -->
    <div class="recent-section">
        <div class="section-header">
            <h2><i class="fas fa-clock"></i> Недавние опросы</h2>
            <a asp-action="Surveys" class="view-all-link">Посмотреть все <i class="fas fa-arrow-right"></i></a>
        </div>
        @if (Model.RecentSurveys.Any())
        {
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Создатель</th>
                            <th>Дата создания</th>
                            <th>Статус</th>
                            <th>Ответов</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var survey in Model.RecentSurveys)
                        {
                            <tr>
                                <td><strong>@survey.Title</strong></td>
                                <td>@survey.CreatorName</td>
                                <td>@survey.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (survey.IsPublished)
                                    {
                                        <span class="badge badge-success">Опубликован</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Черновик</span>
                                    }
                                </td>
                                <td>@survey.ResponseCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="empty-state">Нет опросов</p>
        }
    </div>

    <!-- Недавние пользователи -->
    <div class="recent-section">
        <div class="section-header">
            <h2><i class="fas fa-user-plus"></i> Недавние пользователи</h2>
            <a asp-action="UserManagement" class="view-all-link">Посмотреть всех <i class="fas fa-arrow-right"></i></a>
        </div>
        @if (Model.RecentUsers.Any())
        {
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Email</th>
                            <th>Опросов создано</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.RecentUsers)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                                    {
                                        <strong>@($"{user.FirstName} {user.LastName}").Trim()</strong>
                                    }
                                    else
                                    {
                                        <strong>@user.UserName</strong>
                                    }
                                </td>
                                <td>@user.Email</td>
                                <td>@user.CreatedSurveysCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="empty-state">Нет пользователей</p>
        }
    </div>
</div>

