@model List<NovoyaHope.Models.ViewModels.UserManagementViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-users-cog"></i> Управление пользователями</h1>
        <p class="admin-subtitle">Всего пользователей: @ViewBag.TotalUsers</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        </div>
    }

    <!-- Поиск -->
    <div class="search-section">
        <form method="get" asp-action="UserManagement" class="search-form">
            <div class="search-input-group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Поиск по email, имени, фамилии..." class="search-input" />
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i> Поиск
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="UserManagement" class="clear-search-btn">
                        <i class="fas fa-times"></i> Очистить
                    </a>
                }
            </div>
        </form>
    </div>

    <!-- Таблица пользователей -->
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Роли</th>
                    <th>Email подтвержден</th>
                    <th>Опросов</th>
                    <th>Ответов</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                                {
                                    <strong>@($"{user.FirstName} {user.LastName}").Trim()</strong>
                                }
                                else
                                {
                                    <strong>@user.UserName</strong>
                                }
                            </td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber ?? "-")</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge badge-info">@role</span>
                                }
                                @if (!user.Roles.Any())
                                {
                                    <span class="badge badge-secondary">Нет ролей</span>
                                }
                            </td>
                            <td>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge badge-success"><i class="fas fa-check"></i> Да</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning"><i class="fas fa-times"></i> Нет</span>
                                }
                            </td>
                            <td>@user.CreatedSurveysCount</td>
                            <td>@user.ResponsesCount</td>
                            <td>
                                <div class="action-buttons">
                                    <form method="post" asp-action="ToggleUserRole" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <input type="hidden" name="roleName" value="Administrator" />
                                        <button type="submit" class="btn-sm @(user.Roles.Contains("Administrator") ? "btn-warning" : "btn-success")" 
                                                title="@(user.Roles.Contains("Administrator") ? "Убрать роль администратора" : "Добавить роль администратора")">
                                            <i class="fas fa-shield-alt"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-action="DeleteUser" style="display: inline;" 
                                          class="delete-user-form" data-user-email="@user.Email">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn-sm btn-danger" title="Удалить пользователя">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="empty-state">Пользователи не найдены</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="UserManagement" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    <i class="fas fa-chevron-left"></i> Назад
                </a>
            }
            
            <span class="page-info">Страница @ViewBag.CurrentPage из @ViewBag.TotalPages</span>
            
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a asp-action="UserManagement" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    Вперед <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    }

    <div class="admin-actions">
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад в админ-панель
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForms = document.querySelectorAll('.delete-user-form');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const userEmail = this.getAttribute('data-user-email');
                    if (!confirm('Вы уверены, что хотите удалить пользователя ' + userEmail + '? Это действие нельзя отменить.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}

