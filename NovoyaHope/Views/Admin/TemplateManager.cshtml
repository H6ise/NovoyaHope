@model List<NovoyaHope.Models.ViewModels.TemplateManagementViewModel>
@{
    ViewData["Title"] = "Управление шаблонами";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-layer-group"></i> Управление шаблонами</h1>
        <p class="admin-subtitle">Всего шаблонов: @ViewBag.TotalTemplates</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <!-- Поиск -->
    <div class="search-section">
        <form method="get" asp-action="TemplateManager" class="search-form">
            <div class="search-input-group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Поиск по названию или описанию..." class="search-input" />
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i> Поиск
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="TemplateManager" class="clear-search-btn">
                        <i class="fas fa-times"></i> Очистить
                    </a>
                }
            </div>
        </form>
    </div>

    <!-- Таблица шаблонов -->
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Тип</th>
                    <th>Вопросов</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var template in Model)
                    {
                        <tr>
                            <td><strong>@template.Title</strong></td>
                            <td>@(string.IsNullOrEmpty(template.Description) ? "-" : (template.Description.Length > 100 ? template.Description.Substring(0, 100) + "..." : template.Description))</td>
                            <td>
                                @if (template.Type == NovoyaHope.Models.SurveyType.Poll)
                                {
                                    <span class="badge badge-primary">Голосование</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">Анкета</span>
                                }
                            </td>
                            <td>@template.QuestionCount</td>
                            <td>
                                <div class="action-buttons">
                                    <form method="post" asp-action="DeleteTemplate" style="display: inline;" 
                                          class="delete-template-form" data-template-title="@template.Title">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@template.Id" />
                                        <button type="submit" class="btn-sm btn-danger" title="Удалить шаблон">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="empty-state">Шаблоны не найдены</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="TemplateManager" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    <i class="fas fa-chevron-left"></i> Назад
                </a>
            }
            
            <span class="page-info">Страница @ViewBag.CurrentPage из @ViewBag.TotalPages</span>
            
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a asp-action="TemplateManager" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    Вперед <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    }

    <div class="admin-actions">
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад в админ-панель
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForms = document.querySelectorAll('.delete-template-form');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const templateTitle = this.getAttribute('data-template-title');
                    if (!confirm('Вы уверены, что хотите удалить шаблон "' + templateTitle + '"? Это действие нельзя отменить.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}

