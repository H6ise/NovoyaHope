@model List<NovoyaHope.Models.ViewModels.SurveyManagementViewModel>
@{
    ViewData["Title"] = "Управление опросами";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fas fa-clipboard-list"></i> Управление опросами</h1>
        <p class="admin-subtitle">Всего опросов: @ViewBag.TotalSurveys</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <!-- Поиск -->
    <div class="search-section">
        <form method="get" asp-action="Surveys" class="search-form">
            <div class="search-input-group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Поиск по названию или описанию..." class="search-input" />
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i> Поиск
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Surveys" class="clear-search-btn">
                        <i class="fas fa-times"></i> Очистить
                    </a>
                }
            </div>
        </form>
    </div>

    <!-- Таблица опросов -->
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Создатель</th>
                    <th>Тип</th>
                    <th>Дата создания</th>
                    <th>Вопросов</th>
                    <th>Ответов</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var survey in Model)
                    {
                        <tr>
                            <td>
                                <strong>@survey.Title</strong>
                                @if (!string.IsNullOrEmpty(survey.Description))
                                {
                                    <br /><small class="text-muted">@(survey.Description.Length > 50 ? survey.Description.Substring(0, 50) + "..." : survey.Description)</small>
                                }
                            </td>
                            <td>
                                <div>@survey.CreatorName</div>
                                <small class="text-muted">@survey.CreatorEmail</small>
                            </td>
                            <td>
                                @if (survey.Type == NovoyaHope.Models.SurveyType.Poll)
                                {
                                    <span class="badge badge-primary">Голосование</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">Анкета</span>
                                }
                            </td>
                            <td>@survey.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@survey.QuestionCount</td>
                            <td>@survey.ResponseCount</td>
                            <td>
                                @if (survey.IsPublished)
                                {
                                    <span class="badge badge-success">Опубликован</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Черновик</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <form method="post" asp-action="ToggleSurveyPublish" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@survey.Id" />
                                        <button type="submit" class="btn-sm @(survey.IsPublished ? "btn-warning" : "btn-success")" 
                                                title="@(survey.IsPublished ? "Снять с публикации" : "Опубликовать")">
                                            <i class="fas fa-@(survey.IsPublished ? "eye-slash" : "eye")"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-action="DeleteSurvey" style="display: inline;" 
                                          class="delete-survey-form" data-survey-title="@survey.Title">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@survey.Id" />
                                        <button type="submit" class="btn-sm btn-danger" title="Удалить опрос">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="empty-state">Опросы не найдены</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Пагинация -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="Surveys" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    <i class="fas fa-chevron-left"></i> Назад
                </a>
            }
            
            <span class="page-info">Страница @ViewBag.CurrentPage из @ViewBag.TotalPages</span>
            
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a asp-action="Surveys" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    Вперед <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>
    }

    <div class="admin-actions">
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад в админ-панель
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForms = document.querySelectorAll('.delete-survey-form');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const surveyTitle = this.getAttribute('data-survey-title');
                    if (!confirm('Вы уверены, что хотите удалить опрос "' + surveyTitle + '"? Это действие нельзя отменить.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}

