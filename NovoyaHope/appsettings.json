{
  // 1. Настройки подключения к базе данных (SQL Server)
  "ConnectionStrings": {
    // ВАЖНО: замените NovoyaHopeDb на имя вашей базы данных
    "DefaultConnection": "Server=h9ise;Database=NovoyaHopeDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },

  // 2. Настройки логирования
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // 3. Разрешенные хосты (для продакшена)
  "AllowedHosts": "*"

  // Примечание: В реальном проекте вы также можете использовать appsettings.Development.json
  // для локальных настроек, таких как:
